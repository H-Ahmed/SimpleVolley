<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.simpleloginvolley.RegisterActivity">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Talk To Me"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_title"
        android:layout_marginTop="5dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/prompt_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Name"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/reg_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prompt_user"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/prompt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_name"
            android:layout_marginTop="5dp"
            android:text="Enter Email"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/reg_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prompt_email"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/prompt_reg_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_email"
            android:layout_marginTop="5dp"
            android:text="Enter User Namwe"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/reg_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prompt_reg_user_name"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/prompt_reg_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_user_name"
            android:layout_marginTop="5dp"
            android:text="Enter Password"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/reg_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prompt_reg_password"
            android:layout_marginTop="5dp"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/prompt_reg_con_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_password"
            android:layout_marginTop="5dp"
            android:text="Confirm Password"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/reg_con_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prompt_reg_con_password"
            android:layout_marginTop="5dp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/bn_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_con_password"
            android:layout_marginTop="12dp"
            android:text="Register" />
    </RelativeLayout>

</RelativeLayout>
