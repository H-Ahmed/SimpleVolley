<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.android.simpleloginvolley.LoginActivity">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Talk To Me"
        android:textColor="@android:color/black"
        android:textSize="35dp" />

    <RelativeLayout
        android:id="@+id/rel_cont"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/app_title"
        android:layout_marginTop="55dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/prompt_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user Name"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/login_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prompt_user"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/prompt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_name"
            android:layout_marginTop="12dp"
            android:text="Password"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prompt_password"
            android:layout_marginTop="5dp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/bn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="12dp"
            android:text="Login" />
    </RelativeLayout>

    <TextView
        android:id="@+id/reg_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_cont"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="New User? Reister Now" />


</RelativeLayout>
